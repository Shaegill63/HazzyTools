<body>
  <h1>Daily Office Tools</h1>
  <div class="tools-container" id="toolsContainer"></div>

  <script>
    const tools = [
      { name: 'Email', link: 'email.html' },
      { name: 'Calendar', link: 'calendar.html' },
      { name: 'Notes', link: 'notes.html' },
      { name: 'Task Manager', link: 'tasks.html' },
      { name: 'Chat', link: 'chat.html' }
    ];

    const container = document.getElementById('toolsContainer');

    tools.forEach(tool => {
      const card = document.createElement('div');
      card.className = 'tool-card';
      card.textContent = tool.name;
      card.onclick = () => {
        window.location.href = tool.link;
      };
      container.appendChild(card);
    });
  </script>
</body>
</html>
